{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% extends 'base.html.twig' %}

{% block title %}Edit Person{% endblock %}

{% block body %}
<div class="container">
        <div class="row">
            <div class="col-xs-12">
    <br><br>
    <h1>Edit Person</h1><br>
   {% if app.user %}
        <div class="mb-3">
        {% if is_granted("ROLE_ADMIN") == true %}
        <h3>ADMIN AREA -- ADMIN USER</h3><br>
        {% endif %}
        {% if not is_granted("ROLE_ADMIN") == true %}
        <h3>USER AREA -- USER</h3><br>
        {% endif %}
            <h4>You are logged in as {{ app.user.userIdentifier }} </h4>
        </div>
    {% endif %}
    
<br>
<br>
    {{ include('person/_form.html.twig', {'button_label': 'Update'}) }}

    <a href="{{ path('app_person_index') }}" class="btn btn-success" role="button">BACK TO LIST</a>
<br><br>
    {{ include('person/_delete_form.html.twig') }}
</div>
        </div>
    </div>
{% endblock %}
