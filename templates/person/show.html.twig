{% extends 'base.html.twig' %}

{% block title %}Person{% endblock %}

{% block stylesheets %}
    <style>
        .align-center {
            margin: 0 auto;
        }
    </style>
{% endblock %}

{% block body %}
<div class="row">
        <div class="col-lg-8 align-center">
    <br><br>
    <h1>Person</h1><br>
    {% if app.user %}
        <div class="mb-3">
        {% if is_granted("ROLE_ADMIN") == true %}
        <h3>ADMIN AREA -- ADMIN USER</h3><br>
        {% endif %}
        {% if not is_granted("ROLE_ADMIN") == true %}
        <h3>USER AREA -- USER</h3><br>
        {% endif %}
            <h4>You are logged in as {{ app.user.userIdentifier }} </h4>
        </div>
    {% endif %}
    
<br>
<br>

     <table class="table table-striped ">
                <thead class="thead-dark">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ person.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ person.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ person.email }}</td>
            </tr>
            <tr>
                <th>Tlf</th>
                <td>{{ person.tlf }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_person_index') }}" class="btn btn-success" role="button">BACK TO LIST</a>
    {% if is_granted("ROLE_ADMIN") == true %}
    <a href="{{ path('app_person_edit', {'id': person.id}) }}" class="btn btn-primary" role="button">EDIT</a>
<br><br>
    
    {{ include('person/_delete_form.html.twig') }}
    {% endif %}
</div>
    </div>
{% endblock %}
